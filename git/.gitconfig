[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  grep = auto
[core]
	editor = "emacsclient" --alternate-editor emacs
[push]
	default = current
[alias]
	br = branch
	co = checkout
	cm = commit
	st = status
	df = diff
	list = log --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --date=short
	graph = log --graph --pretty='format:%C(cyan)%h%Cblue%d%Creset %s %C(green)%an, %ar%Creset'
[init]
	templatedir = ~/.git_template
